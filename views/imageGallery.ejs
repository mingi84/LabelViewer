            const from = listformatedkeys[index].keypoints[line[0]];
            const to = listformatedkeys[index].keypoints[line[1]];

            ctx.beginPath();
            ctx.moveTo(from.x, from.y);
            ctx.lineTo(to.x, to.y);
            ctx.strokeStyle = linecolor;
            ctx.lineWidth = 1;
            ctx.stroke();
            ctx.closePath();
        });


    }

