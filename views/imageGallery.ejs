            ctx.beginPath();
            ctx.arc(point.x, point.y, 2, 0, 2 * Math.PI);
            ctx.fillStyle = linecolor;
            ctx.fill();
            ctx.strokeStyle = linecolor;
            ctx.lineWidth = 0.5;
            ctx.stroke();
            ctx.closePath();

            zctx.beginPath();
            zctx.arc(point.x, point.y, 1, 0, 2 * Math.PI);
            zctx.fillStyle = 'blue';
            zctx.fill();
            zctx.closePath();

        });

        // Draw lines
