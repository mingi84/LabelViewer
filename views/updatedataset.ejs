<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dataset Submission</title>
</head>
<body>
    <h1>Submit Dataset</h1>
    <form id="dataset-form">
        <label for="dataset_name">Dataset Name:</label>
        <input type="text" id="dataset_name" name="dataset_name" required><br>

        <label for="user_id">User ID:</label>
        <input type="number" id="user_id" name="user_id"><br>

        <label for="dataset_import_type">Dataset Import Type:</label>
        <input type="number" id="dataset_import_type" name="dataset_import_type" required><br>

        <label for="source_list_sto">Source List STO:</label>
        <input type="number" id="source_list_sto" name="source_list_sto"><br>

        <label for="image_location">Image Location:</label>
        <input type="text" id="image_location" name="image_location" required><br>

        <label for="label_location">Label Location:</label>
        <input type="text" id="label_location" name="label_location" required><br>

        <label for="kypt_id">KYPT ID:</label>
        <input type="number" id="kypt_id" name="kypt_id"><br>

        <button type="submit">Submit</button>
    </form>

    <script>
        document.getElementById("dataset-form").addEventListener("submit", async (event) => {
            event.preventDefault();

            const data = {
                dataset_name: document.getElementById("dataset_name").value,
                user_id: document.getElementById("user_id").value,
                dataset_import_type: document.getElementById("dataset_import_type").value,
                source_list_sto: document.getElementById("source_list_sto").value,
                image_location: document.getElementById("image_location").value,
                label_location: document.getElementById("label_location").value,
                kypt_id: document.getElementById("kypt_id").value,
                dataset_last_update: new Date().toISOString().slice(0, 19).replace("T", " "),
            };

            const response = await fetch("/apidataset/updataset?datasetId=64463cb109f85dcf382a7409", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(data),
            });

            if (response.ok) {
                alert("Dataset submitted successfully.");
            } else {
                alert("Error submitting dataset.");
            }
        });
    </script>
</body>
</html>
